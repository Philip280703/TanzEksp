@using TanzEksp.Client.Services

<nav class="navbar">
    <div class="nav-container">
        <a href="home" class="logo">Tanzaniaeksperten</a>

        <ul class="nav-links">
            <AuthorizeView Roles="Admin, User">
                <Authorized>
                    <li><a href="customers">Kunder</a></li>
                    <li><a href="bookings">Booking</a></li>
                    <li><a href="tripevents">TripEvents</a></li>
                    <li><a href="trips">Rejser</a></li>
                </Authorized>
            </AuthorizeView>
            <AuthorizeView Roles="Admin">
                <Authorized>
                    <li><a href="/admin/users">Administration</a></li>
                </Authorized>
            </AuthorizeView>
        </ul>

        <ul class="nav-auth">
            <AuthorizeView>
                <Authorized>
                    <li class="login-btn" @onclick="Logout"><a href="">Logout</a></li>
                </Authorized>
                <NotAuthorized>
                    <li class="login-btn"><a href="">Login</a></li>
                </NotAuthorized>
            </AuthorizeView>
        </ul>
    </div>
</nav>

@code {
    [Inject]
    private UserService service { get; set; }

    [Inject]
    private NavigationManager _navigationManager { get; set; }

    private async Task Logout()
    {
        service.Logout();
    }
}
